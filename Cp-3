prioridade_lista = []   
tarefas_lista = []
prioridade_alta = []
prioridade_media = []
prioridade_baixa = []

prioridades = {'alta': 1, 'media': 2, 'baixa': 3}

for i in range(8):
    tarefa = input("Digite sua tarefa: ")
    prioridade = input("Digite a prioridade da tarefa (alta, media, baixa): ")

    tarefas_lista.append({'Tarefa': tarefa, 'Prioridade': prioridade})

    if prioridade == 'alta':
        prioridade_alta.append(tarefa)
    elif prioridade == 'media':
        prioridade_media.append(tarefa)
    elif prioridade == 'baixa':
        prioridade_baixa.append(tarefa)
    else:
        print("Prioridade inválida!")

print("Tarefas por prioridade:")

print(f'Prioridade alta: {prioridade_alta}')
print(f'Prioridade media: {prioridade_media}')
print(f'Prioridade baixa: {prioridade_baixa}')

















     
    
